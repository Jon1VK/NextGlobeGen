{
  "name": "next-globe-gen",
  "type": "module",
  "version": "0.0.0-placeholder",
  "description": "Internationalization (i18n) library for Next.js App Router",
  "author": "Joni Vainio-Kaila",
  "license": "MIT",
  "homepage": "https://next-globe-gen.dev",
  "repository": {
    "url": "https://github.com/Jon1VK/NextGlobeGen"
  },
  "keywords": [
    "react",
    "i18n",
    "internationalization",
    "localization",
    "translate",
    "translation",
    "next",
    "next.js"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "bin": {
    "next-globe-gen": "./dist/cli.js"
  },
  "types": "./dist/index.client.d.ts",
  "exports": {
    ".": {
      "react-server": {
        "require": "./dist/index.server.cjs",
        "import": "./dist/index.server.js"
      },
      "default": {
        "require": "./dist/index.client.cjs",
        "import": "./dist/index.client.js"
      }
    },
    "./client": {
      "require": "./dist/index.client.cjs",
      "import": "./dist/index.client.js"
    },
    "./middleware": {
      "require": "./dist/middleware.cjs",
      "import": "./dist/middleware.js"
    },
    "./plugin": {
      "require": "./dist/plugin.cjs",
      "import": "./dist/plugin.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "check": "pnpm run /^check:/",
    "check:types": "tsc",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "test": "vitest --no-watch",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "fast-memoize": "^2.5.2",
    "intl-messageformat": "^10.7.16",
    "negotiator": "^1.0.0",
    "path-to-regexp": "^8.2.0",
    "tsup": "^8.4.0",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/negotiator": "^0.6.3",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "next": "^15.3.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0"
  }
}
