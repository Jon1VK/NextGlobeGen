{
  "name": "next-globe-gen",
  "type": "module",
  "version": "0.0.0-placeholder",
  "description": "Internationalization (i18n) library for Next.js App Router",
  "author": "Joni Vainio-Kaila",
  "license": "MIT",
  "homepage": "https://next-globe-gen.dev",
  "repository": {
    "url": "https://github.com/Jon1VK/NextGlobeGen"
  },
  "keywords": [
    "react",
    "i18n",
    "internationalization",
    "localization",
    "translate",
    "translation",
    "next",
    "next.js"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "bin": {
    "next-globe-gen": "./dist/cli.js"
  },
  "types": "./dist/index.client.d.ts",
  "exports": {
    ".": {
      "react-server": {
        "require": "./dist/index.server.cjs",
        "import": "./dist/index.server.js"
      },
      "default": {
        "require": "./dist/index.client.cjs",
        "import": "./dist/index.client.js"
      }
    },
    "./client": {
      "require": "./dist/index.client.cjs",
      "import": "./dist/index.client.js"
    },
    "./config": {
      "require": "./dist/config.cjs",
      "import": "./dist/config.js"
    },
    "./middleware": {
      "require": "./dist/middleware.cjs",
      "import": "./dist/middleware.js"
    },
    "./plugin": {
      "require": "./dist/plugin.cjs",
      "import": "./dist/plugin.js"
    }
  },
  "scripts": {
    "build": "pnpm run --sequential /^build:/",
    "build:package": "tsup",
    "build:key-extractor": "cd ../key-extractor && pnpm run build && cp ./target/wasm32-wasip1/release/key_extractor.wasm ../package/dist/key_extractor.wasm",
    "check": "pnpm run /^check:/",
    "check:types": "tsc",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "test": "vitest --no-watch",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@formatjs/icu-messageformat-parser": "^3.3.0",
    "@swc/core": "^1.15.8",
    "commander": "^13.1.0",
    "fast-memoize": "^2.5.2",
    "gettext-parser": "^9.0.1",
    "intl-messageformat": "^11.0.9",
    "negotiator": "^1.0.0",
    "path-to-regexp": "^8.3.0",
    "tsup": "^8.5.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/gettext-parser": "^8.0.0",
    "@types/negotiator": "^0.6.4",
    "@types/node": "^22.19.3",
    "@types/react": "18.2.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "next": "^14.2.35",
    "prettier": "^3.7.4",
    "react": "^18.3.1",
    "react-dom": "18.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
