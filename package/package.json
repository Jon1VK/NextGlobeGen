{
  "name": "next-globe-gen",
  "version": "0.0.0-placeholder",
  "description": "Internationalization (i18n) library for Next.js App Router",
  "author": "Joni Vainio-Kaila",
  "license": "MIT",
  "homepage": "https://next-globe-gen.dev",
  "repository": {
    "url": "https://github.com/Jon1VK/NextGlobeGen"
  },
  "keywords": [
    "react",
    "i18n",
    "internationalization",
    "localization",
    "translate",
    "translation",
    "next",
    "next.js"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "bin": {
    "next-globe-gen": "./dist/cli.js"
  },
  "types": "./dist/index.client.d.ts",
  "exports": {
    ".": {
      "react-server": {
        "require": "./dist/index.server.js",
        "import": "./dist/index.server.mjs"
      },
      "default": {
        "require": "./dist/index.client.js",
        "import": "./dist/index.client.mjs"
      }
    },
    "./client": {
      "require": "./dist/index.client.js",
      "import": "./dist/index.client.mjs"
    },
    "./middleware": {
      "require": "./dist/middleware.js",
      "import": "./dist/middleware.mjs"
    },
    "./plugin": {
      "require": "./dist/plugin.js",
      "import": "./dist/plugin.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "check": "pnpm run /^check:/",
    "check:types": "tsc",
    "check:lint": "eslint .",
    "check:format": "prettier --check .",
    "test": "vitest --no-watch",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "fast-memoize": "^2.5.2",
    "intl-messageformat": "^10.7.14",
    "negotiator": "^1.0.0",
    "path-to-regexp": "^8.2.0",
    "tsup": "^8.3.6",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/figlet": "^1.7.0",
    "@types/negotiator": "^0.6.3",
    "@types/node": "^22.10.10",
    "@types/react": "18.2.0",
    "@vitest/coverage-v8": "^3.0.4",
    "eslint": "^9.19.0",
    "next": "14.0.0",
    "prettier": "^3.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^3.0.4"
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
