{
  "compilerOptions": {
    "target": "ESNext",
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": false,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "next-globe-gen/schema": ["src/types/schema"],
      "next-globe-gen/messages": ["src/types/messages"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "dist"]
}
